<simulation verbosity="high">
   <output prefix="npt-ice">
      <properties stride="1" filename="out">  [ step, time{picosecond}, conserved{electronvolt}, temperature{kelvin}, kinetic_opsc{electronvolt}, potential_opsc{electronvolt}, volume, cell_h] </properties>
      <checkpoint stride="200000"/>
   </output>
   <total_steps>10000</total_steps>
   <prng><seed>31415</seed></prng>
   <ffsocket name="lammps" mode="unix">
      <address>lammps_ice</address>
   </ffsocket>
   <system>
      <initialize nbeads="16">
         <file mode="xyz"> ice.xyz </file>
         <velocities mode="thermal" units="kelvin"> 200 </velocities>
      </initialize>
      <forces><force name="lammps" forcefield="lammps" >  </force></forces>
      <ensemble>
         <temperature units="kelvin"> 200 </temperature>
         <pressure units="megapascal"> 10 </pressure>
      </ensemble>
      <motion mode="dynamics">
	<dynamics mode="sc-npt">
	  <barostat mode="sc-isotropic">
            <tau units="femtosecond"> 200</tau>
            <thermostat mode="langevin">
              <tau units="femtosecond"> 100</tau>
            </thermostat>
            <h0> [ 25.6156, 0, 0, 0, 29.5783, 0, 0, 0, 27.8867 ]</h0>
          </barostat>
          <thermostat mode="pile_l">
            <tau units="femtosecond"> 100 </tau>
            <pile_lambda> 0.2 </pile_lambda>
          </thermostat>
          <timestep units="femtosecond"> 0.25 </timestep>
	</dynamics>
      </motion>
   </system>
</simulation>
